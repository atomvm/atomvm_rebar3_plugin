{erl_opts, [debug_info]}.
{deps, []}.
{plugins, [
    atomvm_rebar3_plugin
]}.
{atomvm_rebar3_plugin, [
    {packbeam, [{start, start}]},
    {esp32_flash, [{chip, "esp32c3"}]},
    {stm32_flash, [{offset, "0x1234"}]},
    {uf2create, [{start, "0x10180800"}, {family_id, "rp2350"}]},
    {pico_flash, [{reset, "/dev/FAKE0"}]}
]}.
